                chatInput.value = '';
                setTimeout(() => {
                    let response = "I am not sure about that. Try asking about 'gas sensors' or 'sos features'.";
                    const lower = txt.toLowerCase();
                    if(lower.includes('gas') || lower.includes('sensor')) {
                        response = "Our system detects H2S, Methane, and CO2 in real-time. If levels exceed 10ppm, the helmet vibrates and the dashboard triggers an alarm.";
                    } else if(lower.includes('sos') || lower.includes('emergency')) {
                        response = "Workers can press the physical SOS button on the chest unit for 3 seconds. This sends an immediate high-priority alert with GPS coordinates to the control center.";
                    } else if(lower.includes('battery') || lower.includes('life')) {
                        response = "The Guardian Helmet X1 has a 12-hour battery life with hot-swappable cells, ensuring 24/7 operation capabilities.";
                    } else if(lower.includes('price') || lower.includes('cost')) {
                        response = "Pricing depends on the fleet size. I can connect you to a sales representative if you'd like to schedule a demo.";
                    }
                    addMessage(response, 'bot');
                }, 800);
            }
            chatSend.addEventListener('click', handleChat);
            chatInput.addEventListener('keypress', (e) => {
                if(e.key === 'Enter') handleChat();
            });
            window.triggerEmergencySim = function() {
                const toast = document.createElement('div');
                toast.className = 'toast alert';
                toast.innerHTML = `
                    <div style="font-size: 1.5rem; color: var(--accent-red);"><i class="fa-solid fa-triangle-exclamation"></i></div>
                    <div>
                        <div class="toast-title">SOS TRIGGERED</div>
                        <div class="toast-msg">Worker #492 - Fall Detected. Zone: Sector 4</div>
                    </div>
                `;
                const container = document.getElementById('toast-container');
                container.appendChild(toast);
                dataPoints[48] = 150; 
                dataPoints[49] = 150;
                const div = document.createElement('div');
                div.className = 'log-entry';
                div.style.color = 'var(--accent-red)';
                div.innerHTML = `<span>[CRITICAL]</span> FALL DETECTED WORKER #492`;
                logContainer.appendChild(div);
                // Remove toast after 5s
                setTimeout(() => {
                    toast.style.opacity = '0';
                    toast.style.transform = 'translateX(100px)';
                    setTimeout(() => toast.remove(), 300);
                }, 5000);
            }
        });
