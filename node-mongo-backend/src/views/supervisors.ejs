                        <div class="stat-icon"><i class="fa-solid fa-bell"></i></div>
                        <span class="status-badge status-danger">Urgent</span>
                    </div>
                    <div class="stat-value">3</div>
                    <div class="stat-label">Assistance Alerts</div>
                    <div class="stat-trend trend-down"><i class="fa-solid fa-circle-exclamation"></i> Action Required</div>
                </div>

                <div class="stat-card success animate-fade-in delay-3">
                    <div class="stat-header">
                        <div class="stat-icon"><i class="fa-solid fa-clipboard-check"></i></div>
                        <span class="status-badge status-active">Done</span>
                    </div>
                    <div class="stat-value">1,890</div>
                    <div class="stat-label">Tasks Completed</div>
                    <div class="stat-trend trend-up"><i class="fa-solid fa-arrow-trend-up"></i> +5% efficiency</div>
                </div>

                <div class="stat-card warning animate-fade-in delay-4">
                    <div class="stat-header">
                        <div class="stat-icon"><i class="fa-solid fa-heart-pulse"></i></div>
                        <span class="status-badge status-warning">Health</span>
                    </div>
                    <div class="stat-value">98%</div>
                    <div class="stat-label">Avg. Vitals Score</div>
                    <div class="stat-trend"><i class="fa-solid fa-minus"></i> Stable</div>
                </div>
            </div>

            <div class="grid-large-2">
                <!-- Main Chart -->
                <div class="content-card animate-fade-in delay-2">
                    <div class="card-header">
                        <h3>Safety Incidents & Response Time</h3>
                        <select style="padding: 5px; border-radius: 5px; border: 1px solid var(--border);">
                            <option>This Week</option>
                            <option>Last Week</option>
                        </select>
                    </div>
                    <canvas id="incidentChart" height="120"></canvas>
                </div>

                <!-- Recent Alerts List -->
                <div class="content-card animate-fade-in delay-3">
                    <div class="card-header">
                        <h3>Recent Alerts</h3>
                        <a href="#" onclick="navigate('incidents', document.querySelectorAll('.nav-item')[3])" style="color: var(--primary); text-decoration: none; font-size: 0.9rem;">View All</a>
                    </div>
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-dot danger"></div>
                            <div class="timeline-time">10 mins ago</div>
                            <div class="timeline-content">
                                <strong>Man Down Alert</strong><br>
                                <span style="font-size: 0.85rem; color: var(--text-muted);">Sector 4 - Worker ID #4022</span>
                                <div style="margin-top: 8px;">
                                    <button class="btn btn-primary" style="padding: 4px 10px; font-size: 0.8rem;" onclick="showToast('Dispatching Unit to Sector 4')">Dispatch Help</button>
                                </div>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-dot warning"></div>
                            <div class="timeline-time">45 mins ago</div>
                            <div class="timeline-content">
                                <strong>High Heart Rate</strong><br>
                                <span style="font-size: 0.85rem; color: var(--text-muted);">Sector 2 - Worker ID #1109</span>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-dot"></div>
                            <div class="timeline-time">1 hour ago</div>
                            <div class="timeline-content">
                                <strong>Bin Overflow Reported</strong><br>
                                <span style="font-size: 0.85rem; color: var(--text-muted);">Sector 1 - Automated Sensor</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Live Monitor Page -->
        <section id="monitor" class="page-section">
            <header>
                <div class="page-title">
                    <h1>Live Monitoring</h1>
                    <p>Real-time video feeds and biometric data.</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-outline"><i class="fa-solid fa-map"></i> Map View</button>
                    <button class="btn btn-primary"><i class="fa-solid fa-expand"></i> Fullscreen</button>
                </div>
            </header>

            <div class="video-grid">
                <!-- Video Card 1 -->
                <div class="video-card animate-fade-in delay-1">
                    <img src="https://picsum.photos/seed/work1/600/400" alt="Worker Feed">
                    <div class="live-badge"><div class="dot"></div> LIVE</div>
                    <div class="worker-info-overlay">
                        <div>
                            <h4>John Doe (ID: 101)</h4>
                            <span style="font-size: 0.8rem; opacity: 0.9;">Loc: Sector 4A</span>
                        </div>
                        <div class="health-metrics">
                            <div class="metric" style="color: #ef4444;"><i class="fa-solid fa-heart"></i> 110</div>
                            <div class="metric"><i class="fa-solid fa-droplet"></i> 98%</div>
                        </div>
                    </div>
                </div>

                <!-- Video Card 2 -->
                <div class="video-card animate-fade-in delay-2">
                    <img src="https://picsum.photos/seed/work2/600/400" alt="Worker Feed">
                    <div class="live-badge"><div class="dot"></div> LIVE</div>
                    <div class="worker-info-overlay">
