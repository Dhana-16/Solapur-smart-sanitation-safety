                    <h4>Alex Morgan</h4>
                    <span>Chief Supervisor</span>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        
        <!-- Dashboard Page -->
        <section id="dashboard" class="page-section active-page">
            <header>
                <div class="page-title">
                    <h1>Operations Overview</h1>
                    <p>Real-time monitoring of sanitation safety & assistance.</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-outline" onclick="refreshData()"><i class="fa-solid fa-rotate"></i> Refresh</button>
                    <button class="btn btn-primary" onclick="showToast('Report Generated Successfully')"><i class="fa-solid fa-download"></i> Report</button>
                </div>
            </header>

            <!-- Stats Row -->
            <div class="dashboard-grid">
                <div class="stat-card animate-fade-in delay-1">
                    <div class="stat-header">
                        <div class="stat-icon"><i class="fa-solid fa-user-check"></i></div>
                        <span class="status-badge status-active">Active</span>
                    </div>
